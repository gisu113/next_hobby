<!DOCTYPE html>
<html>
<head>
  <title>トップページ</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>トップページ</h1>
    <%= link_to '新規登録', '/posts/new', class: 'button' %>
  </header>
  <main>
    <% @posts.each do |post| %>
      <div class="post">
        <div class="post-date">
          <span class="label">投稿日時：</span><%= post.created_at %>
        </div>
        <div class="post-content">
          <%= post.content %>
        </div>
      </div>
    <% end %>
  </main>
</body>
</html>
