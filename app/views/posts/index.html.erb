<%= form_with url: "/posts", method: :post, local: true do |form| %>
  <%= form.label :hobby, "趣味の内容" %>
  <%= form.text_field :hobby %>

  <%= form.label :required_time, "所要時間（分）" %>
  <%= form.number_field :required_time %>

  <%= form.label :budget, "予算" %>
  <%= form.text_field :budget %>

  <%= form.label :number_of_people, "参加人数" %>
  <%= form.number_field :number_of_people %>

  <%= form.submit '登録する' %>
<% end %>
