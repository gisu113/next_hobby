<style>
  /* クラス名やセレクタは必要に応じて調整してください */
  .post-content a {
    text-decoration: none; /* 下線を消すスタイル */
  }
</style>

</header>
  <main>
    <% @posts.each do |post| %>
      <div class="post">
        <div class="post-date">
          <span class="label">投稿日時：</span><%= post.created_at %>
        </div>
        <% if user_signed_in? && current_user.id == post.user_id %>
        <li>
            <%= link_to '編集', edit_post_path(post.id) %>
          </li>
          <li>
            <%= link_to '削除', post_path(post.id), data: { turbo_method: :delete } %>
          </li>
          <% end %>
        <div class="post-content">
          <%= link_to post.hobby, post_path(post) %> 
        </div>
        <div id="like-btn<%= post.id %>">
    <% if user_signed_in? && post.liked_by?(current_user)%>
      <%=link_to "いいね済", post_likes_path(post.id),  data: { turbo_method: :delete }, class: "post_likes" %>
    <% else %>
      <%=link_to "いいねする", post_likes_path(post.id), data: { turbo_method: :post }, class: "post_likes" %>
    <% end %>
  </div>
      </div>
    <% end %>
  </main>
</body>